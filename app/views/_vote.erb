
<div class="up-button">
  <% if logged_in? && votable_user?(thing)%>
  <form method="post" action='<%= thing.get_route %>/up' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">        
      <span class="glyphicon glyphicon-chevron-up vote-button" aria-hidden="true"></span>
    </button>
  </form>
  <% end %>
</div>

<div class="vote-number">
  <%= thing.votes.up.count - thing.votes.down.count %>
</div>

<div class="down-button">
  <% if logged_in? && votable_user?(thing)%>
  <form method="post" action='<%= thing.get_route %>/down' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">
      <span class="glyphicon glyphicon-chevron-down vote-button" aria-hidden="true"></span>
    </button>
  </form>
  <% end %>
</div>

