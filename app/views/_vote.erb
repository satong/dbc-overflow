<div class="vote-ui">
  <form method="post" action='<%= thing.get_route %>/up' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">⬆️</button>
  </form>
  <h3><%= thing.votes.up.count - thing.votes.down.count %></h3>
  <form method="post" action='<%= thing.get_route %>/down' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">⬇️</button>
  </form>
</div>
