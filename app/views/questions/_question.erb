<article id="<%= question.id %>">
  <% if logged_in? %>
  <form method="question" action='/questions/<%= question.id %>/upvote' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">⬆️</button>
  </form>
  <form method="question" action='/questions/<%= question.id %>/downvote' class="inline">
    <button type="submit" name="submit_param" value="submit_value" class="vote-button no-padding">⬇️</button>
  </form>
  <% end %>
  <h2><a href='/questions/<%= question.id %>'><%= question.title %></a></h2>
  <p>
    Posted by: <a href='/users/<%= question.user.id %>'><%= question.user.username %></a><%=" | Up votes: #{question.votes.up.count} | Down votes: #{question.votes.down.count} | Answers: #{question.answers.count} | Last updated: #{question.updated_at.to_date}" %>
  </p>
</article>
