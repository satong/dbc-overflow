<div class="individual-comment">
 <div class="vote-box comment-vote">
  <%= erb :"_vote", layout: false, locals: {thing: comment} %>
</div>
<div class="comment-edit">
  <%= erb :"_admin", layout: false, locals: {detail: comment}%>
</div>
<div class="comment-text">
  <p><%=comment.body%></p>
  <p style="color: #808080"><i>Written by: <%=comment.user.username %></i></p>
</div>
</div>
